  0x01, 0x30, 0x0D, 0x31, 0x30, 0x20, 0x46, 0x4F, 0x52, 0x20, 0x49, 0x3D, 0x31, 0x20, 0x54, 0x4F, 0x20, 0x35, 0x0D, 0x33, 0x30, 0x20, 0x50, 0x52, 0x49, 0x4E, 0x54, 0x20, 0x22, 0x48, 0x45, 0x4C, 0x4C, 0x4F, 0x22, 0x2C, 0x49, 0x0D, 0x34, 0x30, 0x20, 0x4E, 0x45, 0x58, 0x54, 0x20, 0x49, 0x0D, 0xEC,
